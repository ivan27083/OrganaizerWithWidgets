<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Organaizer.AppWidget.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_fon_progress"
    android:theme="@style/Theme.Organaizer.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidget_text_task"
        style="@style/Widget.Organaizer.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:contentDescription="@string/appwidget_reminder_task"
        android:gravity="center"
        android:text="@string/appwidget_reminder_task"
        android:textSize="22sp"
        android:padding="7sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/appwidget_text_date"
        style="@style/Widget.Organaizer.AppWidget.InnerView"
        android:layout_below="@id/appwidget_text_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        android:contentDescription="@string/appwidget_reminder_date"
        android:gravity="center"
        android:text="@string/appwidget_reminder_date"
        android:textSize="18sp"
        android:textStyle="bold|italic" />


</RelativeLayout>